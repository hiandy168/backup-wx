.filter {
  width: 750rpx;
  font-size: 14px;
}

.filter .search-input {
  width: 750rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #eee;
}

.filter .search-input input {
  width: 700rpx;  
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  background-color: #fff;
}

.filter-expand {
  position: fixed;
  top: 180rpx;
  left: 0;
  width: 750rpx;
  padding-top: 30rpx;
  z-index: 20;
  background-color: #fff;
  font-size: 14px;
}

.filter .picker, .filter-expand .picker {
  float: left;
  width: 187.5rpx;
  height: 60rpx;
  text-align: center;
}

.filter-expand .filter-cancel-btn {
  clear: both;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #ddd;
  text-align: center;
}

.filter-border-bottom {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}

.house-item {
  position: relative;
  width: 100%;
  height: 240rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 14px;
}

.house-item .house-img {
  float: left;
  width: 240rpx;
  height: 240rpx;
}

.house-item .house-meta {
  position: relative;
  float: left;
  width: 400rpx;
  height: 240rpx;
  padding-left: 30rpx;
}

.house-item .house-meta .house-name {
  height: 40rpx;
  padding-bottom: 20rpx;
  font-size: 16px;
  font-weight: bold;
}


.house-item .house-meta .house-type {
  float: left;
  padding-bottom: 20rpx;
}

.house-item .house-meta .house-price {
  float: right;
  color: #ea1218;
}

.house-item .house-meta .house-address {
  position: absolute;
  bottom: 0;
  color: #999;
}
