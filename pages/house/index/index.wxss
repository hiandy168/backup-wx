.container-grid {
    font-size: 14px;
    padding-bottom: 150rpx;
}

.slider, .slider-item {
    /* 与后端剪切应一致, 否则变形 */
    width: 750rpx;
    height: 500rpx;
}

.id {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    color: #ddd;
    font-size: 14px;
}

.title {
    margin-bottom: 20rpx;
    font-size: 20px;
}

.price {
    margin-bottom: 40rpx;
}

.price-string {
    display: inline;
    color: #f00;
}

.item {
    border-bottom: 1px solid #eee;
    padding-bottom: 20rpx;
    margin-bottom: 30rpx;
}

.item-label {
    display: inline-block;
    width: 150rpx;
    vertical-align: top;
    color: #ccc;
}

.item-text {
    display: inline-block;
    width: 550rpx;
}

.two-per-line{
    display: inline-block;
    width: 350rpx;
}

.two-per-line .item-label {
    width: 150rpx;
}

.two-per-line .item-text {
    width: 200rpx;
}

.distance, .room {
    margin-bottom: 10rpx;
}

.description-label {
    margin-bottom: 20rpx;
    font-weight: bold;
}

.call {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60rpx;
    padding-top: 20rpx;
    z-index: 10;
    background-color: #ffb160;
    color: #fff;
    text-align: center;
}

.call .text, .call .number {
    display: inline-block;
}

.call .text {
    padding-right: 20rpx;
}